<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>Speckless</title>
	
	<!-- bootstrap -->
	<%= stylesheet_link_tag    "bootstrap/bootstrap.min", :media => "all" %>
    <%= csrf_meta_tags %>

	<!-- libraries -->
	<%= stylesheet_link_tag    "libs/font-awesome.min", :media => "all" %>
	<%= stylesheet_link_tag    "libs/nanoscroller", :media => "all" %>

	<!-- global styles -->
	<%= stylesheet_link_tag    "compiled/layout", :media => "all" %>
	<%= stylesheet_link_tag    "compiled/elements", :media => "all" %>


	<!-- this page specific styles -->
	
	<!-- Favicon -->
	<link type="image/x-icon" href="favicon.png" rel="shortcut icon"/>

	<!-- google font libraries -->
	<%= stylesheet_link_tag    "//fonts.googleapis.com/css?family=Open+Sans:400,600,700,300|Titillium+Web:200,300,400", :media => "all" %>

	<!--[if lt IE 9]>
		<script src="js/html5shiv.js"></script>
		<script src="js/respond.min.js"></script>
	<![endif]-->
</head>
<!--body-->
<body class="theme-blue fixed-header">
	<header class="navbar" id="header-navbar">
		<div class="container">
			<a href="<%= root_path %>" id="logo" class="navbar-brand">
				<span class="name">Speckless</span>
				
			</a>
			
			<div class="clearfix">
			<button class="navbar-toggle" data-target=".navbar-ex1-collapse" data-toggle="collapse" type="button">
				<span class="sr-only">Toggle navigation</span>
				<span class="fa fa-bars"></span>
			</button>
			
			<div class="nav-no-collapse navbar-left pull-left hidden-sm hidden-xs">
				<ul class="nav navbar-nav pull-left">
					<li>
						<a class="btn" id="make-small-nav">
							<i class="fa fa-bars"></i>
						</a>
					</li>
				</ul>
			</div>
			
			<div class="nav-no-collapse pull-right" id="header-nav">
				<ul class="nav navbar-nav pull-right">
					
					<li class="dropdown hidden-xs">
						<a class="btn dropdown-toggle" data-toggle="dropdown">
							<i class="fa fa-warning"></i>
							<span class="count">1</span>
						</a>
						<ul class="dropdown-menu notifications-list">
							<li class="pointer">
								<div class="pointer-inner">
									<div class="arrow"></div>
								</div>
							</li>
							<li class="item-header">You have 1 new notification(s)</li>
							<li class="item">
								<a href="#">
									<i class="fa fa-comment"></i>
									<span class="content">Your order with ID #832432 will be delivered shortly.</span>
									<span class="time"><i class="fa fa-clock-o"></i>13 min.</span>
								</a>
							</li>
							<li class="item-footer">
								<a href="#">
									View all notifications
								</a>
							</li>
						</ul>
					</li>


					<li class="dropdown profile-dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<%= image_tag "samples/scarlet-159.png" %>
							<span class="hidden-xs"><%= current_user.first_name + " " + current_user.last_name %></span> <b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><a href="user-profile.html"><i class="fa fa-user"></i>Profile</a></li>
							<li><a href="#"><i class="fa fa-credit-card"></i>Wallet</a></li>
						</ul>
					</li>
					<li class="hidden-xxs">
						<%= link_to destroy_user_session_path, :title => "Sign out" do %>
  							<i class="fa fa-power-off"></i>
						<% end %>
					</li>
				</ul>
			</div>
			</div>
		</div>
	</header>
	<div id="page-wrapper" class="container">
		<div class="row">
			<div id="nav-col">
				<section id="col-left" class="col-left-nano">
					<div id="col-left-inner" class="col-left-nano-content">
						<div id="user-left-box" class="clearfix hidden-sm hidden-xs">
							<%= image_tag "samples/scarlet-159.png" %>
							<div class="user-box">
								<span class="name">
									Welcome<br/>
									<%= current_user.first_name %>
								</span>
								<span class="status">
									<i class="fa fa-circle"></i> Online
								</span>
							</div>
						</div>
						<div class="collapse navbar-collapse navbar-ex1-collapse" id="sidebar-nav">	
							<ul class="nav nav-pills nav-stacked">
								<li>
									<a href="index.html">
										<i class="fa fa-dashboard"></i>
										<span>Dashboard</span>
									</a>
								</li>
								<li>
									<a href="#" class="dropdown-toggle">
										<i class="fa fa-reorder"></i>
										<span>Orders</span>
										<i class="fa fa-chevron-circle-right drop-icon"></i>
									</a>
									<ul class="submenu">
										<li>
											<a href="users.html">
												New Order
											</a>
										</li>
										<li>
											<a href="user-profile.html">
												Recurring Order
											</a>
										</li>
										<li>
											<a href="user-history.html">
												History
											</a>
										</li>
									</ul>
								</li>
								<li>
									<a href="index.html">
										<i class="fa fa-money"></i>
										<span>Pricing</span>
									</a>
								</li>
								<li>
									<a href="index.html">
										<i class="fa fa-life-ring"></i>
										<span>Help</span>
									</a>
								</li>
								
							</ul>
						</div>
					</div>
				</section>
			</div>
			<div id="content-wrapper">
				






					<%= yield %>




				
				<footer id="footer-bar" class="row">
					<p id="footer-copyright" class="col-xs-12">
						&copy; 2014 <a href="http://www.adbee.sk/" target="_blank">Speckless</a>
					</p>
				</footer>
			</div>
		</div>
	</div>
	
	

	<!-- global scripts -->

	<%= javascript_include_tag "jquery.min" %>
	<%= javascript_include_tag "bootstrap.min" %>
	<%= javascript_include_tag "jquery.nanoscroller.min" %>
	
	
	<!-- this page specific scripts -->
	
	<!-- theme scripts -->
	<%= javascript_include_tag "scripts" %>
	
	<!-- this page specific inline scripts -->
	
</body>
</html>